datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Team {
  id              String   @id @default(uuid())
  name            String
  videoUrl        String
  category        String
  city            String
  state           String
  mentorProfessor String
  companion       String?
  student1        String?
  student2        String?
  student3        String?
  student4        String?
  studentCount    Int
  averageScore    Float
  isHighlighted   Boolean  @default(false)
  // Novo campo para controlar a ordem personalizada (ranking)
  customOrder     Int?     
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}